<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Profile - Byte & Beyond</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <%- include('../partials/header') %>

    <main>
      <div class="container">
        <div class="form-card glass" style="margin-top: 60px; max-width: 600px">
          <h1 style="font-size: 28px; font-weight: 700; margin-bottom: 24px">
            Edit Profile
          </h1>

          <form id="profile-form">
            <div
              class="form-group"
              style="text-align: center; margin-bottom: 24px"
            >
              <div
                id="avatar-preview-container"
                style="
                  width: 100px;
                  height: 100px;
                  border-radius: 50%;
                  background: #eee;
                  margin: 0 auto 12px;
                  display: flex;
                  align-items: center;
                  justify-content: center;
                  overflow: hidden;
                "
              >
                <span
                  id="avatar-placeholder"
                  style="font-size: 32px; color: #888"
                ></span>
                <img
                  id="avatar-img"
                  src=""
                  style="
                    width: 100%;
                    height: 100%;
                    object-fit: cover;
                    display: none;
                  "
                />
              </div>
              <button
                type="button"
                class="btn btn-outline btn-sm"
                onclick="document.getElementById('avatar-input').click()"
              >
                Change Photo
              </button>
              <input
                type="file"
                id="avatar-input"
                name="avatar"
                accept="image/*"
                style="display: none"
              />
            </div>

            <div class="form-group">
              <label for="displayName">Display Name</label>
              <input
                type="text"
                id="displayName"
                name="displayName"
                class="form-control"
              />
            </div>

            <div class="form-group">
              <label for="bio">Bio</label>
              <textarea
                id="bio"
                name="bio"
                class="form-control"
                rows="3"
                maxlength="160"
              ></textarea>
              <div
                style="
                  font-size: 12px;
                  color: var(--text-secondary);
                  text-align: right;
                  margin-top: 4px;
                "
              >
                Max 160 chars
              </div>
            </div>

            <div class="form-group">
              <label style="color: var(--text-secondary)">Email</label>
              <input
                type="email"
                id="email"
                class="form-control"
                disabled
                style="background: #f9fafb"
              />
            </div>

            <div class="form-group">
              <label style="color: var(--text-secondary)">Username</label>
              <input
                type="text"
                id="username"
                class="form-control"
                disabled
                style="background: #f9fafb"
              />
            </div>

            <div
              style="
                margin-top: 32px;
                display: flex;
                gap: 12px;
                justify-content: flex-end;
              "
            >
              <a href="/dashboard" class="btn btn-outline">Cancel</a>
              <button type="submit" class="btn btn-primary">
                Save Changes
              </button>
            </div>
          </form>
        </div>
      </div>
    </main>

    <script src="/js/auth.js"></script>
    <script src="/js/profile.js"></script>
  </body>
</html>
