<!-- Unified Media Manager Modal -->
<div id="mediaLibraryModal" class="premium-modal-overlay">
  <div class="premium-modal-container">
    <!-- Header with Integrated Upload -->
    <div class="premium-modal-header" style="flex-shrink: 0">
      <div class="premium-modal-title">Media Manager</div>

      <div class="flex items-center gap-4">
        <label
          for="header-file-upload"
          class="btn btn-primary cursor-pointer text-sm flex items-center gap-2"
        >
          <svg
            width="16"
            height="16"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
          >
            <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4" />
            <polyline points="17 8 12 3 7 8" />
            <line x1="12" y1="3" x2="12" y2="15" />
          </svg>
          Upload New
          <input
            id="header-file-upload"
            type="file"
            class="hidden"
            onchange="handleFileUpload(this.files)"
          />
        </label>

        <button class="premium-close-btn" onclick="closeMediaLibrary()">
          <svg
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
          >
            <line x1="18" y1="6" x2="6" y2="18"></line>
            <line x1="6" y1="6" x2="18" y2="18"></line>
          </svg>
        </button>
      </div>
    </div>

    <!-- Unified Body (Drag Zone + Grid) -->
    <div class="premium-modal-body flex flex-col h-full bg-white">
      <!-- Progress Bar (Hidden by default) -->
      <div id="upload-progress" class="hidden w-full bg-gray-100 h-1">
        <div
          class="bg-indigo-600 h-1 transition-all duration-300"
          style="width: 0%"
        ></div>
      </div>

      <div class="library-layout h-full">
        <!-- Main Grid Area -->
        <div
          class="library-grid-container flex-1 bg-gray-50 h-full relative"
          ondrop="handleDrop(event)"
          ondragover="handleDragOver(event)"
        >
          <!-- Drag Overlay -->
          <div
            id="drag-overlay"
            class="absolute inset-0 bg-indigo-50 bg-opacity-90 z-10 hidden flex flex-col items-center justify-center border-4 border-indigo-500 border-dashed m-4 rounded-xl pointer-events-none"
          >
            <div class="upload-icon-circle mb-4 animate-bounce">
              <svg
                width="40"
                height="40"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4" />
                <polyline points="17 8 12 3 7 8" />
                <line x1="12" y1="3" x2="12" y2="15" />
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-indigo-900">
              Drop files to upload
            </h3>
          </div>

          <!-- Empty State -->
          <div
            id="empty-state"
            class="hidden h-full flex flex-col items-center justify-center text-gray-400"
          >
            <svg
              width="64"
              height="64"
              class="mb-4 opacity-20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <rect x="3" y="3" width="18" height="18" rx="2" ry="2" />
              <circle cx="8.5" cy="8.5" r="1.5" />
              <polyline points="21 15 16 10 5 21" />
            </svg>
            <p>No media found. Upload something to get started.</p>
          </div>

          <!-- Grid -->
          <div id="media-grid" class="media-grid p-6 pb-20">
            <!-- Items injected by JS -->
          </div>

          <div id="library-loading" class="hidden flex justify-center py-8">
            <div
              class="w-8 h-8 border-4 border-indigo-200 border-t-indigo-600 rounded-full animate-spin"
            ></div>
          </div>

          <div class="flex justify-center pb-8">
            <button
              id="load-more-btn"
              class="btn btn-ghost hidden"
              onclick="loadMoreMedia()"
            >
              Load More
            </button>
          </div>
        </div>

        <!-- Sidebar -->
        <div
          id="media-details"
          class="library-sidebar bg-white border-l h-full overflow-y-auto w-80 flex-shrink-0 hidden"
        >
          <div class="p-6">
            <div
              class="sidebar-preview mb-6 bg-gray-50 rounded-lg flex items-center justify-center border border-gray-100"
              id="selected-media-preview"
              style="height: 200px"
            >
              <!-- Preview -->
            </div>

            <div class="mb-4">
              <label
                class="text-xs font-bold text-gray-400 uppercase tracking-wider mb-1 block"
                >Filename</label
              >
              <div
                id="detail-filename"
                class="text-sm font-medium text-gray-900 break-all"
              >
                image.jpg
              </div>
            </div>

            <div class="mb-6">
              <label
                class="text-xs font-bold text-gray-400 uppercase tracking-wider mb-1 block"
                >Type</label
              >
              <div id="detail-type" class="text-sm text-gray-600">Image</div>
            </div>

            <div class="mb-4">
              <label
                class="text-xs font-bold text-gray-400 uppercase tracking-wider mb-2 block"
                >Alt Text</label
              >
              <input
                type="text"
                id="detail-alt"
                class="w-full px-3 py-2 border border-gray-200 rounded-lg text-sm focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 outline-none"
                placeholder="Describe this media..."
              />
              <button
                onclick="saveAltText()"
                class="mt-2 text-xs font-bold text-indigo-600 hover:text-indigo-800"
              >
                Save Changes
              </button>
            </div>

            <div class="mb-8">
              <label
                class="text-xs font-bold text-gray-400 uppercase tracking-wider mb-2 block"
                >Direct Link</label
              >
              <div class="flex gap-2">
                <input
                  type="text"
                  id="detail-url"
                  class="flex-1 px-3 py-2 bg-gray-50 border border-gray-200 rounded-lg text-xs text-gray-500 font-mono"
                  readonly
                />
                <button
                  onclick="copyUrl()"
                  class="p-2 hover:bg-gray-100 rounded-lg text-gray-500"
                  title="Copy"
                >
                  <svg
                    width="16"
                    height="16"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <rect x="9" y="9" width="13" height="13" rx="2" ry="2" />
                    <path
                      d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"
                    />
                  </svg>
                </button>
              </div>
            </div>

            <div class="flex flex-col gap-3 pt-6 border-t border-gray-100">
              <button
                onclick="insertSelectedMedia()"
                class="btn btn-primary w-full justify-center py-2.5 shadow-lg shadow-indigo-100"
              >
                Insert Media
              </button>
              <button
                onclick="deleteSelectedMedia()"
                class="text-sm text-red-500 font-medium hover:text-red-700 py-2"
              >
                Delete Permanently
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
