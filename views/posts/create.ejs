    <script src="/js/auth.js"></script>
    <script>
      // Auth check
      if (!isAuthenticated()) {
        window.location.href =
          "/login?redirect=" + encodeURIComponent(window.location.pathname);
      }
      /* ═══════════════════════════════════════
       STATE
    ═══════════════════════════════════════ */
      let tags = [];
      let savedSelection = null;
      let autosaveTimer = null;
      let isDirty = false;
      let currentVisibility = "public"; // 'public' | 'draft' | 'private'

      const VIS_CONFIG = {
        public: {
          label: "Public",
          btnLabel: "Publish Public",
          successTitle: "Story Published!",
          successMsg: "Your story is now live for everyone.",
          toastMsg: "Published publicly!",
          icon: "🌐",
        },
        draft: {
          label: "Draft",
          btnLabel: "Save as Draft",
          successTitle: "Draft Saved!",
          successMsg: "Your draft has been saved.",
          toastMsg: "Draft saved.",
          icon: "✏️",
        },
        private: {
          label: "Private",
          btnLabel: "Save as Private",
          successTitle: "Saved Privately!",
          successMsg: "Only members can view this story.",
          toastMsg: "Saved as private.",
          icon: "🔒",
        },
      };

      /* ═══════════════════════════════════════
       INIT
    ═══════════════════════════════════════ */
      document.addEventListener("DOMContentLoaded", () => {
        // Load categories
        loadCategories();

        // Cover zone
        const zone = document.getElementById("cover-zone");
        zone.addEventListener("click", () =>
          document.getElementById("cover-file").click(),
        );
        document
          .getElementById("cover-change-btn")
          .addEventListener("click", (e) => {
            e.stopPropagation();
            document.getElementById("cover-file").click();
          });

        document.querySelectorAll("textarea").forEach((el) => autoResize(el));

        const tomorrow = new Date();
        tomorrow.setDate(tomorrow.getDate() + 1);
        document.getElementById("schedule-date").value = tomorrow
          .toISOString()
          .split("T")[0];
        document.getElementById("schedule-time").value = "09:00";

        document.getElementById("title").addEventListener("input", () => {
          isDirty = true;
        });
        document.getElementById("rte-body").addEventListener("input", () => {
          isDirty = true;
        });

        selectVisibility("public");
      });

      async function loadCategories() {
        const select = document.getElementById("categoryId");
        try {
          const data = await apiRequest("/categories");
          if (data.success) {
            let options = '<option value="">Select category…</option>';
            data.categories.forEach((cat) => {
              options += `<option value="${cat._id}">${cat.name}</option>`;
            });
            select.innerHTML = options;
          }
        } catch (err) {
          console.error("Failed to load categories:", err);
        }
      }

      /* ═══════════════════════════════════════
       VISIBILITY
    ═══════════════════════════════════════ */
      function selectVisibility(vis) {
        currentVisibility = vis;

        // Update selector UI
        ["public", "draft", "private"].forEach((v) => {
          const el = document.getElementById("vis-" + v);
          el.className = "vis-option" + (v === vis ? " selected-" + v : "");
        });

        // Update header badge
        const badge = document.getElementById("header-vis-badge");
        badge.className = "visibility-badge " + vis;
        document.getElementById("header-vis-label").textContent =
          VIS_CONFIG[vis].label;

        // Update main publish button
        const btn = document.getElementById("sidebar-publish-btn");
        btn.className = "publish-btn-main status-" + vis;
        document.getElementById("publish-btn-label").textContent =
          VIS_CONFIG[vis].btnLabel;

        // Show schedule row only for public
        const scheduleRow = document.getElementById("schedule-row");
        scheduleRow.style.display = vis === "public" ? "block" : "none";

        // Update success overlay color
        const overlay = document.getElementById("success-overlay");
        overlay.className = "success-overlay status-" + vis;
      }

      function scrollToVisibility() {
        document
          .getElementById("visibility-section")
          .scrollIntoView({ behavior: "smooth", block: "start" });
      }

      /* ═══════════════════════════════════════
       UTILITIES
    ═══════════════════════════════════════ */
      function showToast(msg, type = "") {
        const t = document.getElementById("toast");
        t.textContent = msg;
        t.className = "toast show " + type;
        setTimeout(() => {
          t.className = "toast";
        }, 3200);
      }

      function setSaveStatus(txt, cls = "") {
        const s = document.getElementById("save-status");
        if (!s) return;
        s.textContent = txt;
        s.className = "save-status " + cls;
      }

      function autoResize(el) {
        el.style.height = "auto";
        el.style.height = el.scrollHeight + "px";
      }

      function confirmLeave(e) {
        if (
          isDirty &&
          !confirm("You have unsaved changes. Leave without saving?")
        ) {
          e.preventDefault();
        } else {
          window.history.back();
        }
      }

      /* ═══════════════════════════════════════
       COVER
    ═══════════════════════════════════════ */
      function previewCover(input) {
        if (!input.files || !input.files[0]) return;
        const reader = new FileReader();
        reader.onload = (e) => {
          document.getElementById("image-preview").src = e.target.result;
          document.getElementById("image-preview").style.display = "block";
          document.getElementById("cover-zone").classList.add("has-image");
        };
        reader.readAsDataURL(input.files[0]);
      }

      /* ═══════════════════════════════════════
       TITLE / SLUG / EXCERPT
    ═══════════════════════════════════════ */
      function onTitleInput(el) {
        autoResize(el);
        const len = el.value.length;
        const counter = document.getElementById("title-count");
        counter.textContent = len + " / 120";
        counter.className =
          "char-count" + (len > 115 ? " over" : len > 100 ? " warn" : "");
        const slug = el.value
          .toLowerCase()
          .replace(/[^a-z0-9\s-]/g, "")
          .trim()
          .replace(/\s+/g, "-");
        document.getElementById("slug").value = slug;
        document.getElementById("slug-preview").textContent = slug || "…";
        isDirty = true;
        triggerAutosave();
      }

      function slugify(el) {
        const clean = el.value
          .toLowerCase()
          .replace(/[^a-z0-9-]/g, "-")
          .replace(/-+/g, "-")
          .replace(/^-|-$/g, "");
        el.value = clean;
        document.getElementById("slug-preview").textContent = clean || "…";
      }

      function onExcerptInput(el) {
        const len = el.value.length;
        const counter = document.getElementById("excerpt-count");
        counter.textContent = len + " / 160";
        counter.className =
          "char-count" + (len > 155 ? " over" : len > 140 ? " warn" : "");
        triggerAutosave();
      }

      /* ═══════════════════════════════════════
       RTE
    ═══════════════════════════════════════ */
      function execCmd(cmd, val = null) {
        document.getElementById("rte-body").focus();
        document.execCommand(cmd, false, val);
        updateToolbarState();
        onRteInput();
      }

      function applyFormatBlock(select) {
        const val = select.value;
        if (!val) return;
        document.getElementById("rte-body").focus();
        document.execCommand("formatBlock", false, val);
        setTimeout(() => {
          select.value = "p";
        }, 0);
        onRteInput();
      }

      function insertCode() {
        const sel = window.getSelection();
        const text = sel && sel.toString() ? sel.toString() : "code";
        document.getElementById("rte-body").focus();
        document.execCommand("insertHTML", false, `<code>${text}</code>`);
        onRteInput();
      }

      function updateToolbarState() {
        [
          "bold",
          "italic",
          "underline",
          "strikeThrough",
          "insertUnorderedList",
          "insertOrderedList",
        ].forEach((cmd) => {
          const btn = document.querySelector(`[data-cmd="${cmd}"]`);
          if (btn)
            btn.classList.toggle("active", document.queryCommandState(cmd));
        });
      }

      function onRteInput() {
        const el = document.getElementById("rte-body");
        const text = el.innerText || "";
        const words = text.trim().split(/\s+/).filter(Boolean);
        const wc = words.length;
        const cc = text.replace(/\s/g, "").length;
        const readMin = Math.max(1, Math.round(wc / 200));
        const paraCount = el.querySelectorAll(
          "p,h1,h2,h3,blockquote,li",
        ).length;

        document.getElementById("word-count").textContent = wc + " words";
        document.getElementById("read-time").textContent =
          "~" + readMin + " min read";
        document.getElementById("stat-words").textContent = wc;
        document.getElementById("stat-chars").textContent = cc;
        document.getElementById("stat-read").textContent = readMin;
        document.getElementById("stat-para").textContent = paraCount;

        const sentences = text
          .split(/[.!?]+/)
          .filter((s) => s.trim().length > 0).length;
        const avgWords = sentences > 0 ? wc / sentences : wc;
        const score = Math.min(
          100,
          Math.max(0, Math.round(100 - (avgWords - 10) * 3)),
        );
        document.getElementById("readability-fill").style.width = score + "%";
        document.getElementById("readability-label").textContent =
          wc < 10
            ? "Start writing to see score"
            : score < 30
              ? "Needs work — try shorter sentences"
              : score < 60
                ? "Fair"
                : score < 80
                  ? "Good"
                  : "Excellent";

        isDirty = true;
        triggerAutosave();
      }

      /* ═══════════════════════════════════════
       TAGS
    ═══════════════════════════════════════ */
      function handleTag(e) {
        const input = document.getElementById("tags-input");
        if (e.key === "Enter" || e.key === ",") {
          e.preventDefault();
          addTag(input.value.trim().replace(",", ""));
          input.value = "";
        } else if (e.key === "Backspace" && input.value === "" && tags.length) {
          removeTag(tags.length - 1);
        }
      }

      function addTag(val) {
        val = val.toLowerCase().trim();
        if (!val || tags.includes(val) || tags.length >= 5) return;
        tags.push(val);
        renderTags();
      }

      function removeTag(idx) {
        tags.splice(idx, 1);
        renderTags();
      }

      function renderTags() {
        const wrap = document.getElementById("tags-wrap");
        const input = document.getElementById("tags-input");
        wrap.querySelectorAll(".tag-chip").forEach((el) => el.remove());
        tags.forEach((t, i) => {
          const chip = document.createElement("div");
          chip.className = "tag-chip";
          chip.innerHTML = `${t}<button onclick="removeTag(${i})" type="button">×</button>`;
          wrap.insertBefore(chip, input);
        });
        input.placeholder =
          tags.length >= 5
            ? "Max tags reached"
            : tags.length === 0
              ? "Add tags…"
              : "Add more…";
      }

      function tagInputHint(el) {
        if (el.value.includes(",")) {
          addTag(el.value.replace(",", "").trim());
          el.value = "";
        }
      }

      /* ═══════════════════════════════════════
       SCHEDULE
    ═══════════════════════════════════════ */
      function toggleSchedule(el) {
        const fields = document.getElementById("schedule-fields");
        fields.style.display = el.checked ? "flex" : "none";
      }

      /* ═══════════════════════════════════════
       MODALS
    ═══════════════════════════════════════ */
      function openImageModal() {
        saveSelection();
        document.getElementById("image-modal").classList.add("open");
        setTimeout(() => document.getElementById("img-url-input").focus(), 100);
      }
      function openLinkModal() {
        saveSelection();
        const sel = window.getSelection();
        if (sel)
          document.getElementById("link-text-input").value = sel.toString();
        document.getElementById("link-modal").classList.add("open");
        setTimeout(
          () => document.getElementById("link-url-input").focus(),
          100,
        );
      }
      function closeModal(id) {
        document.getElementById(id).classList.remove("open");
      }
      function saveSelection() {
        const sel = window.getSelection();
        if (sel && sel.rangeCount > 0)
          savedSelection = sel.getRangeAt(0).cloneRange();
      }
      function restoreSelection() {
        if (!savedSelection) return;
        const sel = window.getSelection();
        sel.removeAllRanges();
        sel.addRange(savedSelection);
      }
      function insertImage() {
        const url = document.getElementById("img-url-input").value.trim();
        const alt = document.getElementById("img-alt-input").value.trim();
        if (!url) {
          showToast("Please enter an image URL", "error");
          return;
        }
        restoreSelection();
        document.getElementById("rte-body").focus();
        document.execCommand(
          "insertHTML",
          false,
          `<img src="${url}" alt="${alt || "Image"}" style="max-width:100%;border-radius:8px;margin:8px 0;">`,
        );
        closeModal("image-modal");
        document.getElementById("img-url-input").value = "";
        document.getElementById("img-alt-input").value = "";
        onRteInput();
      }
      function insertLink() {
        const url = document.getElementById("link-url-input").value.trim();
        const txt = document.getElementById("link-text-input").value.trim();
        if (!url) {
          showToast("Please enter a URL", "error");
          return;
        }
        restoreSelection();
        document.getElementById("rte-body").focus();
        if (txt) {
          document.execCommand(
            "insertHTML",
            false,
            `<a href="${url}" target="_blank" rel="noopener">${txt}</a>`,
          );
        } else {
          document.execCommand("createLink", false, url);
          document
            .getElementById("rte-body")
            .querySelectorAll("a:not([target])")
            .forEach((a) => {
              a.setAttribute("target", "_blank");
              a.setAttribute("rel", "noopener");
            });
        }
        closeModal("link-modal");
        document.getElementById("link-url-input").value = "";
        document.getElementById("link-text-input").value = "";
        onRteInput();
      }
      document.querySelectorAll(".modal-overlay").forEach((overlay) => {
        overlay.addEventListener("click", (e) => {
          if (e.target === overlay) overlay.classList.remove("open");
        });
      });
      document.addEventListener("keydown", (e) => {
        if (e.key === "Escape")
          document
            .querySelectorAll(".modal-overlay.open")
            .forEach((m) => m.classList.remove("open"));
        if ((e.ctrlKey || e.metaKey) && e.key === "s") {
          e.preventDefault();
          saveAs("draft");
        }
      });

      /* ═══════════════════════════════════════
       VALIDATION
    ═══════════════════════════════════════ */
      function validateField(el, errorId, msg) {
        const err = document.getElementById(errorId);
        const invalid = !el.value.trim();
        el.classList.toggle("error", invalid);
        if (err) err.classList.toggle("show", invalid);
        return !invalid;
      }

      function validateAll(isDraftSave = false) {
        const errors = [];
        const title = document.getElementById("title").value.trim();
        const titleValid = title.length >= 5;
        document.getElementById("title").classList.toggle("error", !titleValid);
        document
          .getElementById("title-error")
          .classList.toggle("show", !titleValid);
        if (!titleValid) errors.push("Story title required (min 5 characters)");

        if (!isDraftSave) {
          const content = document.getElementById("rte-body").innerText.trim();
          const contentValid = content.length >= 50;
          document
            .getElementById("rte-body")
            .classList.toggle("error", !contentValid);
          if (!contentValid)
            errors.push("Story content required (min 50 characters)");

          const cat = document.getElementById("categoryId").value;
          document.getElementById("categoryId").classList.toggle("error", !cat);
          document
            .getElementById("category-error")
            .classList.toggle("show", !cat);
          if (!cat) errors.push("Please select a category");

          const tagsValid = tags.length > 0;
          document
            .getElementById("tags-wrap")
            .classList.toggle("error", !tagsValid);
          document
            .getElementById("tags-error")
            .classList.toggle("show", !tagsValid);
          if (!tagsValid) errors.push("Add at least one tag");

          const excerpt = document.getElementById("excerpt").value.trim();
          const excerptValid = excerpt.length >= 20;
          document
            .getElementById("excerpt")
            .classList.toggle("error", !excerptValid);
          document
            .getElementById("excerpt-error")
            .classList.toggle("show", !excerptValid);
          if (!excerptValid)
            errors.push("SEO description required (min 20 characters)");
        }

        const summary = document.getElementById("validation-summary");
        const list = document.getElementById("validation-list");
        if (errors.length) {
          list.innerHTML = errors.map((e) => `<li>${e}</li>`).join("");
          summary.classList.add("show");
          summary.scrollIntoView({ behavior: "smooth", block: "nearest" });
        } else {
          summary.classList.remove("show");
        }
        return errors.length === 0;
      }

      /* ═══════════════════════════════════════
       COLLECT FORM DATA
    ═══════════════════════════════════════ */
      function collectFormData(status) {
        const formData = new FormData();
        formData.append(
          "title",
          document.getElementById("title").value.trim() || "Untitled",
        );
        formData.append(
          "content",
          document.getElementById("rte-body").innerHTML,
        );
        formData.append(
          "excerpt",
          document.getElementById("excerpt").value.trim(),
        );
        formData.append("slug", document.getElementById("slug").value.trim());
        formData.append("status", status);
        formData.append("visibility", status); // maps to DB column

        const catId = document.getElementById("categoryId").value;
        if (catId) formData.append("categoryId", catId);
        tags.forEach((tag) => formData.append("tags", tag));
        formData.append(
          "allowComments",
          document.getElementById("allow-comments").checked,
        );
        formData.append(
          "featured",
          document.getElementById("featured").checked,
        );

        const fileInput = document.getElementById("cover-file");
        if (fileInput.files[0]) formData.append("image", fileInput.files[0]);

        // Schedule (only relevant for public)
        const schedToggle = document.getElementById("schedule-toggle");
        if (schedToggle.checked && status === "public") {
          const d = document.getElementById("schedule-date").value;
          const t = document.getElementById("schedule-time").value;
          if (d && t)
            formData.append("scheduledAt", new Date(d + "T" + t).toISOString());
        }

        return formData;
      }

      /* ═══════════════════════════════════════
       BUTTON STATE
    ═══════════════════════════════════════ */
      function setLoadingState(loading) {
        const ids = [
          "publish-btn",
          "sidebar-publish-btn",
          "btn-save-draft",
          "btn-save-private",
          "draft-btn-header",
        ];
        ids.forEach((id) => {
          const b = document.getElementById(id);
          if (b) b.disabled = loading;
        });
        if (loading) {
          document.getElementById("publish-btn-label").textContent = "Saving…";
          document
            .querySelector(
              "#sidebar-publish-btn .btn-spinner, #sidebar-publish-btn svg",
            )
            ?.remove?.();
          document.getElementById("sidebar-publish-btn").prepend(
            Object.assign(document.createElement("span"), {
              className: "btn-spinner",
            }),
          );
        } else {
          selectVisibility(currentVisibility); // restores button labels
        }
      }

      /* ═══════════════════════════════════════
       SHOW SUCCESS
    ═══════════════════════════════════════ */
      function showSuccess(vis) {
        const cfg = VIS_CONFIG[vis];
        const overlay = document.getElementById("success-overlay");
        document.getElementById("success-title").textContent = cfg.successTitle;
        document.getElementById("success-message").textContent = cfg.successMsg;
        overlay.className = "success-overlay status-" + vis + " show";
        setTimeout(() => {
          overlay.classList.remove("show");
          setLoadingState(false);
        }, 2500);
      }

      /* ═══════════════════════════════════════
       MAIN PUBLISH (uses current visibility)
    ═══════════════════════════════════════ */
      async function handlePublish() {
        const isDraftSave = currentVisibility === "draft";
        if (!validateAll(isDraftSave)) {
          showToast("Please fix the errors before saving", "error");
          return;
        }
        await saveAs(currentVisibility);
      }

      /* ═══════════════════════════════════════
       SAVE AS (public | draft | private)
    ═══════════════════════════════════════ */
      async function saveAs(status) {
        const isDraftSave = status === "draft";
        if (!validateAll(isDraftSave)) {
          showToast("Please fix the errors", "error");
          return;
        }

        setLoadingState(true);
        setSaveStatus("Saving…", "saving");

        try {
          const formData = collectFormData(status);

          // ── Connect to your backend here ──
          const data = await apiRequest("/posts", {
            method: "POST",
            body: formData,
          });

          setSaveStatus("Saved", "saved");
          isDirty = false;

          showSuccess(status);
          showToast(VIS_CONFIG[status].toastMsg, "success");

          // Redirect after short delay
          setTimeout(() => {
            window.location.href = `/posts/${data.post._id}`;
          }, 1500);
        } catch (err) {
          console.error("Save error:", err);
          showToast(err.message || "Save failed", "error");
          setSaveStatus("Error", "error");
          setLoadingState(false);
        }
      }

      /* ═══════════════════════════════════════
       AUTOSAVE
    ═══════════════════════════════════════ */
      function triggerAutosave() {
        setSaveStatus("Saving…", "saving");
        clearTimeout(autosaveTimer);
        autosaveTimer = setTimeout(() => {
          setSaveStatus("Saved", "saved");
          setTimeout(
            () => setSaveStatus(VIS_CONFIG[currentVisibility].label),
            2500,
          );
        }, 1500);
      }
    </script>
