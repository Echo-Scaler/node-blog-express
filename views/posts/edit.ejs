    <script>
      /* ‚ïê‚ïê‚ïê State ‚ïê‚ïê */
      let tags = [];
      let savedSelection = null;
      let autosaveTimer = null;
      let hasUnsavedChanges = false;
      let originalData = {}; // stores original loaded data for discard
      let loadedPost = null; // full post object from API

      /* ‚ïê‚ïê‚ïê Toast ‚ïê‚ïê */
      function showToast(msg, type = "") {
        const t = document.getElementById("toast");
        t.textContent = msg;
        t.className = "toast show " + type;
        setTimeout(() => (t.className = "toast"), 3000);
      }

      function setSaveStatus(txt, cls = "") {
        const s = document.getElementById("save-status");
        s.textContent = txt;
        s.className = "save-status " + cls;
      }

      /* ‚ïê‚ïê‚ïê Auto-resize ‚ïê‚ïê */
      function autoResize(el) {
        el.style.height = "auto";
        el.style.height = el.scrollHeight + "px";
      }
      document.querySelectorAll("textarea").forEach((el) => {
        autoResize(el);
        el.addEventListener("input", () => autoResize(el));
      });

      /* ‚ïê‚ïê‚ïê Cover preview ‚ïê‚ïê */
      function previewCover(input) {
        if (!input.files || !input.files[0]) return;
        const reader = new FileReader();
        reader.onload = (e) => {
          const preview = document.getElementById("image-preview");
          const zone = document.getElementById("cover-zone");
          preview.src = e.target.result;
          preview.style.display = "block";
          zone.classList.add("has-image");
          markDirty();
        };
        reader.readAsDataURL(input.files[0]);
      }

      /* ‚ïê‚ïê‚ïê Load post data from API ‚ïê‚ïê */
      async function loadPostData() {
        const postId = document.getElementById("post-id").value;
        try {
          const data = await apiRequest(`/posts/${postId}`);
          if (!data.success || !data.post) {
            showToast("Failed to load post data", "error");
            return;
          }
          loadedPost = data.post;

          // Normalize the post data for populateForm
          const post = data.post;
          populateForm({
            title: post.title || "",
            subtitle: post.subtitle || "",
            content: post.content || "",
            coverImage: post.image || null,
            categoryId:
              typeof post.categoryId === "object" && post.categoryId
                ? post.categoryId._id
                : post.categoryId || "",
            tags: Array.isArray(post.tags) ? post.tags : [],
            excerpt: post.excerpt || "",
            slug: post.slug || "",
            status: post.status || "draft",
            allowComments:
              post.allowComments !== undefined ? post.allowComments : true,
            featured: post.featured || false,
            membersOnly: post.membersOnly || false,
            updatedAt: post.updatedAt || post.createdAt || null,
          });
        } catch (error) {
          console.error("Failed to load post:", error);
          showToast("Error loading post: " + error.message, "error");
          document.getElementById("last-edited-text").textContent =
            "Failed to load post data";
        }
      }

      function populateForm(post) {
        // Store original for discard
        originalData = JSON.parse(JSON.stringify(post));

        // Title
        const titleEl = document.getElementById("title");
        titleEl.value = post.title || "";
        autoResize(titleEl);
        onTitleInput(titleEl, false);

        // Subtitle
        const subEl = document.getElementById("subtitle");
        subEl.value = post.subtitle || "";
        autoResize(subEl);

        // Content
        document.getElementById("rte-body").innerHTML = post.content || "";
        onRteInput();

        // Cover image
        if (post.coverImage) {
          const preview = document.getElementById("image-preview");
          const zone = document.getElementById("cover-zone");
          preview.src = post.coverImage;
          preview.onload = function () {
            preview.style.display = "block";
            zone.classList.add("has-image");
          };
          // Also set immediately in case image is cached
          preview.style.display = "block";
          zone.classList.add("has-image");
        }

        // Category
        const catEl = document.getElementById("categoryId");
        if (post.categoryId) catEl.value = post.categoryId;

        // Tags
        tags = post.tags || [];
        renderTags();

        // Excerpt
        const excerptEl = document.getElementById("excerpt");
        excerptEl.value = post.excerpt || "";
        autoResize(excerptEl);
        onExcerptInput(excerptEl);

        // Slug
        document.getElementById("slug").value = post.slug || "";
        document.getElementById("slug-preview").textContent = post.slug || "‚Ä¶";

        // Status
        if (post.status) document.getElementById("status").value = post.status;

        // Toggles
        if (post.allowComments !== undefined)
          document.getElementById("allow-comments").checked =
            post.allowComments;
        if (post.featured !== undefined)
          document.getElementById("featured").checked = post.featured;
        if (post.membersOnly !== undefined)
          document.getElementById("members-only").checked = post.membersOnly;

        // Last edited
        const editedText = post.updatedAt
          ? "Last edited " + timeAgo(new Date(post.updatedAt))
          : "Last edit time unknown";
        document.getElementById("last-edited-text").textContent = editedText;

        // Delete modal preview
        document.getElementById("delete-title-preview").textContent =
          post.title || "this story";

        setSaveStatus("All changes saved", "saved");
        setTimeout(() => setSaveStatus("Editing"), 2000);
        hasUnsavedChanges = false;
      }

      function timeAgo(date) {
        const diff = Math.floor((Date.now() - date) / 1000);
        if (diff < 60) return "just now";
        if (diff < 3600) return Math.floor(diff / 60) + "m ago";
        if (diff < 86400) return Math.floor(diff / 3600) + "h ago";
        return Math.floor(diff / 86400) + "d ago";
      }

      /* ‚ïê‚ïê‚ïê Dirty tracking ‚ïê‚ïê */
      function markDirty() {
        if (!hasUnsavedChanges) {
          hasUnsavedChanges = true;
          setSaveStatus("Unsaved changes");
        }
        triggerAutosave();
      }

      /* ‚ïê‚ïê‚ïê Title ‚ïê‚ïê */
      function onTitleInput(el, dirty = true) {
        autoResize(el);
        const len = el.value.length;
        const counter = document.getElementById("title-count");
        counter.textContent = len + " / 120";
        counter.className =
          "char-count" + (len > 100 ? (len > 115 ? " over" : " warn") : "");
        const slug = el.value
          .toLowerCase()
          .replace(/[^a-z0-9\s-]/g, "")
          .trim()
          .replace(/\s+/g, "-");
        if (!document.getElementById("slug").dataset.manual) {
          document.getElementById("slug").value = slug;
          document.getElementById("slug-preview").textContent = slug || "‚Ä¶";
        }
        if (dirty) markDirty();
      }

      function slugify(el) {
        el.dataset.manual = "true";
        const clean = el.value
          .toLowerCase()
          .replace(/[^a-z0-9-]/g, "-")
          .replace(/-+/g, "-");
        el.value = clean;
        document.getElementById("slug-preview").textContent = clean || "‚Ä¶";
        markDirty();
      }

      function onExcerptInput(el) {
        const len = el.value.length;
        const counter = document.getElementById("excerpt-count");
        counter.textContent = len + " / 160";
        counter.className =
          "char-count" + (len > 140 ? (len > 155 ? " over" : " warn") : "");
        markDirty();
      }

      function onStatusChange(el) {
        markDirty();
      }

      /* ‚ïê‚ïê‚ïê RTE ‚ïê‚ïê */
      function execCmd(cmd, val = null) {
        document.getElementById("rte-body").focus();
        document.execCommand(cmd, false, val);
        updateToolbarState();
        onRteInput();
      }

      function formatBlock(tag) {
        if (!tag) return;
        document.getElementById("rte-body").focus();
        document.execCommand("formatBlock", false, tag);
        onRteInput();
      }

      function insertCode() {
        const sel = window.getSelection();
        const text = sel && sel.toString() ? sel.toString() : "code";
        document.execCommand("insertHTML", false, `<code>${text}</code>`);
        onRteInput();
      }

      function updateToolbarState() {
        [
          "bold",
          "italic",
          "underline",
          "strikeThrough",
          "insertUnorderedList",
          "insertOrderedList",
        ].forEach((cmd) => {
          const btn = document.querySelector(`[data-cmd="${cmd}"]`);
          if (btn)
            btn.classList.toggle("active", document.queryCommandState(cmd));
        });
      }

      function onRteInput() {
        const el = document.getElementById("rte-body");
        const text = el.innerText || "";
        const words = text.trim().split(/\s+/).filter(Boolean);
        const wc = words.length;
        const cc = text.length;
        const readMin = Math.max(1, Math.round(wc / 200));
        const paraCount = el.querySelectorAll(
          "p,h1,h2,h3,blockquote,li",
        ).length;

        document.getElementById("word-count").textContent = wc + " words";
        document.getElementById("read-time").textContent =
          "~" + readMin + " min read";
        document.getElementById("stat-words").textContent = wc;
        document.getElementById("stat-chars").textContent = cc;
        document.getElementById("stat-read").textContent = readMin;
        document.getElementById("stat-para").textContent = paraCount;

        const score = Math.min(100, Math.round((wc / Math.max(1, cc)) * 1500));
        document.getElementById("readability-fill").style.width = score + "%";
        document.getElementById("readability-label").textContent =
          score < 30
            ? "Needs work"
            : score < 60
              ? "Fair"
              : score < 80
                ? "Good"
                : "Excellent";

        markDirty();
      }

      /* ‚ïê‚ïê‚ïê Tags ‚ïê‚ïê */
      function handleTag(e) {
        const input = document.getElementById("tags-input");
        if (e.key === "Enter" || e.key === ",") {
          e.preventDefault();
          addTag(input.value.trim().replace(",", ""));
          input.value = "";
        } else if (e.key === "Backspace" && input.value === "" && tags.length) {
          removeTag(tags.length - 1);
        }
      }

      function addTag(val) {
        if (!val || tags.includes(val) || tags.length >= 5) return;
        tags.push(val);
        renderTags();
        markDirty();
      }

      function removeTag(idx) {
        tags.splice(idx, 1);
        renderTags();
        markDirty();
      }

      function renderTags() {
        const wrap = document.getElementById("tags-wrap");
        const input = document.getElementById("tags-input");
        wrap.querySelectorAll(".tag-chip").forEach((el) => el.remove());
        tags.forEach((t, i) => {
          const chip = document.createElement("div");
          chip.className = "tag-chip";
          chip.innerHTML = `${t}<button onclick="removeTag(${i})" type="button">√ó</button>`;
          wrap.insertBefore(chip, input);
        });
      }

      function tagInputHint(el) {
        if (el.value.includes(",")) {
          addTag(el.value.replace(",", "").trim());
          el.value = "";
        }
      }

      /* ‚ïê‚ïê‚ïê Modals ‚ïê‚ïê */
      function openImageModal() {
        saveSelection();
        document.getElementById("image-modal").classList.add("open");
        setTimeout(() => document.getElementById("img-url-input").focus(), 100);
      }

      function openLinkModal() {
        saveSelection();
        const sel = window.getSelection();
        if (sel)
          document.getElementById("link-text-input").value = sel.toString();
        document.getElementById("link-modal").classList.add("open");
        setTimeout(
          () => document.getElementById("link-url-input").focus(),
          100,
        );
      }

      function closeModal(id) {
        document.getElementById(id).classList.remove("open");
      }

      function saveSelection() {
        const sel = window.getSelection();
        if (sel && sel.rangeCount > 0)
          savedSelection = sel.getRangeAt(0).cloneRange();
      }

      function restoreSelection() {
        if (!savedSelection) return;
        const sel = window.getSelection();
        sel.removeAllRanges();
        sel.addRange(savedSelection);
      }

      function insertImage() {
        const url = document.getElementById("img-url-input").value.trim();
        const alt = document.getElementById("img-alt-input").value.trim();
        if (!url) {
          showToast("Please enter an image URL", "error");
          return;
        }
        restoreSelection();
        document.getElementById("rte-body").focus();
        document.execCommand(
          "insertHTML",
          false,
          `<img src="${url}" alt="${alt}" style="max-width:100%;border-radius:8px;margin:8px 0;">`,
        );
        closeModal("image-modal");
        document.getElementById("img-url-input").value = "";
        document.getElementById("img-alt-input").value = "";
        onRteInput();
      }

      function insertLink() {
        const url = document.getElementById("link-url-input").value.trim();
        const txt = document.getElementById("link-text-input").value.trim();
        if (!url) {
          showToast("Please enter a URL", "error");
          return;
        }
        restoreSelection();
        document.getElementById("rte-body").focus();
        if (txt) {
          document.execCommand(
            "insertHTML",
            false,
            `<a href="${url}" target="_blank">${txt}</a>`,
          );
        } else {
          document.execCommand("createLink", false, url);
          document
            .getElementById("rte-body")
            .querySelectorAll("a:not([target])")
            .forEach((a) => a.setAttribute("target", "_blank"));
        }
        closeModal("link-modal");
        document.getElementById("link-url-input").value = "";
        document.getElementById("link-text-input").value = "";
        onRteInput();
      }

      // Delete modal
      function openDeleteModal() {
        document.getElementById("delete-modal").classList.add("open");
      }

      async function executeDelete() {
        const postId = document.getElementById("post-id").value;
        try {
          const data = await apiRequest(`/posts/${postId}`, {
            method: "DELETE",
          });
          showToast("Story deleted successfully", "success");
          closeModal("delete-modal");
          hasUnsavedChanges = false;
          setTimeout(() => (window.location.href = "/dashboard"), 1500);
        } catch (error) {
          showToast("Failed to delete: " + error.message, "error");
          closeModal("delete-modal");
        }
      }

      // Discard modal
      function confirmDiscard() {
        document.getElementById("discard-modal").classList.add("open");
      }

      function executeDiscard() {
        closeModal("discard-modal");
        populateForm(originalData);
        hasUnsavedChanges = false;
        setSaveStatus("Changes discarded", "saved");
        setTimeout(() => setSaveStatus("Editing"), 2000);
        showToast("Changes discarded");
      }

      document.querySelectorAll(".modal-overlay").forEach((overlay) => {
        overlay.addEventListener("click", (e) => {
          if (e.target === overlay) overlay.classList.remove("open");
        });
      });
      document.addEventListener("keydown", (e) => {
        if (e.key === "Escape")
          document
            .querySelectorAll(".modal-overlay.open")
            .forEach((m) => m.classList.remove("open"));
      });

      /* ‚ïê‚ïê‚ïê Validation ‚ïê‚ïê */
      function validateAll() {
        const errors = [];

        const title = document.getElementById("title").value.trim();
        if (title.length < 5) {
          document.getElementById("title").classList.add("error");
          document.getElementById("title-error").classList.add("show");
          errors.push("Story title required (min 5 characters)");
        } else {
          document.getElementById("title").classList.remove("error");
          document.getElementById("title-error").classList.remove("show");
        }

        const content = document.getElementById("rte-body").innerText.trim();
        if (content.length < 50) {
          document.getElementById("rte-body").classList.add("error");
          errors.push("Story content required (min 50 characters)");
        } else {
          document.getElementById("rte-body").classList.remove("error");
        }

        const cat = document.getElementById("categoryId").value;
        if (!cat) {
          document.getElementById("categoryId").classList.add("error");
          document.getElementById("category-error").classList.add("show");
          errors.push("Please select a category");
        } else {
          document.getElementById("categoryId").classList.remove("error");
          document.getElementById("category-error").classList.remove("show");
        }

        if (tags.length === 0) {
          document.getElementById("tags-wrap").classList.add("error");
          document.getElementById("tags-error").classList.add("show");
          errors.push("Add at least one tag");
        } else {
          document.getElementById("tags-wrap").classList.remove("error");
          document.getElementById("tags-error").classList.remove("show");
        }

        const excerpt = document.getElementById("excerpt").value.trim();
        if (excerpt.length < 20) {
          document.getElementById("excerpt").classList.add("error");
          document.getElementById("excerpt-error").classList.add("show");
          errors.push("SEO description required (min 20 characters)");
        } else {
          document.getElementById("excerpt").classList.remove("error");
          document.getElementById("excerpt-error").classList.remove("show");
        }

        const summary = document.getElementById("validation-summary");
        const list = document.getElementById("validation-list");
        if (errors.length) {
          list.innerHTML = errors.map((e) => `<li>${e}</li>`).join("");
          summary.classList.add("show");
          summary.scrollIntoView({ behavior: "smooth", block: "nearest" });
        } else {
          summary.classList.remove("show");
        }

        return errors.length === 0;
      }

      /* ‚ïê‚ïê‚ïê Save ‚ïê‚ïê */
      async function handleSave() {
        if (!validateAll()) {
          showToast("Please fix errors before saving", "error");
          return;
        }
        const postId = document.getElementById("post-id").value;
        document.getElementById("save-btn").disabled = true;
        document.getElementById("sidebar-save-btn").disabled = true;
        setSaveStatus("Saving‚Ä¶", "saving");

        try {
          const formData = new FormData();
          formData.append(
            "title",
            document.getElementById("title").value.trim(),
          );
          formData.append(
            "content",
            document.getElementById("rte-body").innerHTML,
          );
          formData.append(
            "excerpt",
            document.getElementById("excerpt").value.trim(),
          );
          formData.append("status", document.getElementById("status").value);
          formData.append(
            "categoryId",
            document.getElementById("categoryId").value,
          );

          // Append tags individually (matching create page behavior)
          tags.forEach((tag) => formData.append("tags", tag));

          // Append cover image if a new one was selected
          const imageInput = document.getElementById("cover-file");
          if (imageInput.files && imageInput.files[0]) {
            formData.append("image", imageInput.files[0]);
          }

          const data = await apiRequest(`/posts/${postId}`, {
            method: "PUT",
            body: formData,
          });

          if (data.success) {
            hasUnsavedChanges = false;
            setSaveStatus("All changes saved", "saved");
            showToast("Changes saved! Redirecting‚Ä¶", "success");
            // Redirect to dashboard after a short delay
            setTimeout(() => {
              window.location.href = "/dashboard";
            }, 1500);
          } else {
            showToast(data.message || "Failed to save", "error");
          }
        } catch (error) {
          console.error("Save error:", error);
          showToast("Failed to save: " + error.message, "error");
        } finally {
          document.getElementById("save-btn").disabled = false;
          document.getElementById("sidebar-save-btn").disabled = false;
        }
      }

      /* ‚ïê‚ïê‚ïê Autosave ‚ïê‚ïê */
      function triggerAutosave() {
        clearTimeout(autosaveTimer);
        autosaveTimer = setTimeout(() => {
          if (hasUnsavedChanges) {
            setSaveStatus("Autosaved", "saved");
            setTimeout(() => setSaveStatus("Editing"), 2000);
          }
        }, 3000);
      }

      async function saveDraft() {
        const postId = document.getElementById("post-id").value;
        setSaveStatus("Saving‚Ä¶", "saving");
        try {
          const formData = new FormData();
          formData.append(
            "title",
            document.getElementById("title").value.trim() || "Untitled Draft",
          );
          formData.append(
            "content",
            document.getElementById("rte-body").innerHTML,
          );
          formData.append(
            "excerpt",
            document.getElementById("excerpt").value.trim(),
          );
          formData.append("status", "draft");
          formData.append(
            "categoryId",
            document.getElementById("categoryId").value,
          );

          tags.forEach((tag) => formData.append("tags", tag));

          const imageInput = document.getElementById("cover-file");
          if (imageInput.files && imageInput.files[0]) {
            formData.append("image", imageInput.files[0]);
          }

          const data = await apiRequest(`/posts/${postId}`, {
            method: "PUT",
            body: formData,
          });

          if (data.success) {
            setSaveStatus("Draft saved", "saved");
            showToast("Draft saved", "success");
            hasUnsavedChanges = false;
            document.getElementById("status").value = "draft";
            setTimeout(() => setSaveStatus("Editing"), 2000);
          } else {
            showToast(data.message || "Failed to save draft", "error");
            setSaveStatus("Unsaved changes");
          }
        } catch (error) {
          console.error("Save draft error:", error);
          showToast("Failed to save draft: " + error.message, "error");
          setSaveStatus("Unsaved changes");
        }
      }

      // Warn before leaving with unsaved changes
      window.addEventListener("beforeunload", (e) => {
        if (hasUnsavedChanges) {
          e.preventDefault();
          e.returnValue = "";
        }
      });

      // Ctrl+S to save
      document.addEventListener("keydown", (e) => {
        if ((e.ctrlKey || e.metaKey) && e.key === "s") {
          e.preventDefault();
          handleSave();
        }
      });

      /* ‚ïê‚ïê‚ïê Load categories from API ‚ïê‚ïê */
      async function loadCategories() {
        try {
          const data = await apiRequest("/categories");
          if (data.success && data.categories) {
            const select = document.getElementById("categoryId");
            const firstOpt = select.firstElementChild; // "Select category‚Ä¶"
            select.innerHTML = "";
            if (firstOpt) select.appendChild(firstOpt);

            data.categories.forEach((cat) => {
              const opt = document.createElement("option");
              opt.value = cat._id;
              opt.textContent = cat.name;
              select.appendChild(opt);
            });
          }
        } catch (err) {
          console.error("Failed to load categories", err);
        }
      }

      /* ‚ïê‚ïê‚ïê Init ‚ïê‚ïê */
      (async function init() {
        // Auth check
        if (typeof isAuthenticated !== "function") {
          console.error("Auth functions not loaded");
          return;
        }
        if (!isAuthenticated()) {
          window.location.href =
            "/login?redirect=" + encodeURIComponent(window.location.pathname);
          return;
        }

        // Update user avatar
        const user = getUser();
        if (user) {
          const avatarEl = document.getElementById("user-avatar");
          if (avatarEl) {
            if (user.avatar) {
              avatarEl.style.backgroundImage = `url(${user.avatar})`;
              avatarEl.style.backgroundSize = "cover";
              avatarEl.textContent = "";
            } else {
              avatarEl.textContent = (user.displayName || user.username || "U")
                .substring(0, 2)
                .toUpperCase();
            }
          }
        }

        // Load categories first, then post data (so category select is populated)
        await loadCategories();
        await loadPostData();
      })();
    </script>
