            if (user.avatar) {
              avatarEl.style.backgroundImage = `url(${user.avatar})`;
              avatarEl.style.backgroundSize = "cover";
              avatarEl.textContent = "";
            } else {
              avatarEl.textContent = (user.displayName || user.username || "U")
                .slice(0, 2)
                .toUpperCase();
            }
          }
        }

        // Load post data
        try {
          const data = await apiRequest(`/posts/${postId}`);
          currentPost = data.post;
          populatePostUI(currentPost);

          // Load reactions, comments, related posts in parallel
          loadReactions();
          loadComments();
          loadRelatedPosts();
        } catch (error) {
          document.getElementById("post-skeleton").innerHTML = `
        <div style="text-align:center;padding:80px 0;color:var(--danger);">
          <p style="font-size:18px;font-weight:700;margin-bottom:8px;">Failed to load story</p>
          <p style="font-size:14px;color:var(--text-2);">${escapeHtml(error.message)}</p>
          <a href="/" class="btn btn-ghost" style="margin-top:20px;">Go home</a>
        </div>`;
        }
      })();
    </script>
  </body>
</html>
