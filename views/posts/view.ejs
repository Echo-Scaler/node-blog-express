            rawContent.includes("<h") ||
            rawContent.includes("<div")
          ) {
            bodyEl.innerHTML = DOMPurify.sanitize(rawContent);
          } else if (typeof marked !== "undefined") {
            bodyEl.innerHTML = DOMPurify.sanitize(marked.parse(rawContent));
          } else {
